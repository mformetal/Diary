<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="@dimen/recycler_margin"
    android:layout_marginEnd="@dimen/recycler_margin"
    app:cardElevation="4dp"
    app:cardCornerRadius="3dp"
    app:cardBackgroundColor="@android:color/white" >

    <miles.scribble.ui.widget.AspectRatioImageView
        android:id="@+id/adapter_entry_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <miles.diary.ui.widget.TypefaceTextView
        android:id="@+id/adapter_entry_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/adapter_entry_margin"
        android:textSize="@dimen/large_text_size"
        android:textColor="@android:color/white"
        tools:text="December 2015" />

    <miles.diary.ui.widget.TypefaceTextView
        android:id="@+id/adapter_entry_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="bottom"
        android:textSize="@dimen/large_text_size"
        android:textColor="@android:color/white"
        tools:text="That one time at band camp" />

</android.support.v7.widget.CardView>
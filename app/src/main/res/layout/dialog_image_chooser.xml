<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <miles.diary.ui.widget.TypefaceTextView
        android:id="@+id/dialog_from_gallery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="From Pictures"
        android:textSize="15sp"
        android:drawablePadding="5dp"
        android:layout_margin="15dp"
        android:gravity="center"
        android:drawableStart="@drawable/ic_photo_24dp" />

    <miles.diary.ui.widget.TypefaceTextView
        android:id="@+id/dialog_from_camera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="From Camera"
        android:textSize="15sp"
        android:drawablePadding="5dp"
        android:layout_margin="15dp"
        android:gravity="center"
        android:drawableStart="@drawable/ic_camera_alt_24dp_black" />

</LinearLayout>
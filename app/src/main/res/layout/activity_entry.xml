<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_entry_root"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Toolbar
        android:id="@+id/activity_entry_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        style="@style/AppTheme.Widget.HomeToolbar" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="?android:attr/actionBarSize"
        android:layout_marginBottom="75dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <miles.diary.ui.widget.TypefaceEditText
            android:id="@+id/activity_entry_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/adapter_entry_margin"
            android:textSize="@dimen/large_text_size"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:maxLines="1"
            android:hint="@string/activity_entry_title_hint"
            app:textViewAutoFit="true" />

        <miles.diary.ui.widget.NotebookEditText
            android:id="@+id/activity_entry_body"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="@dimen/large_text_size"
            android:layout_marginStart="@dimen/full_width_text_field_horizontal_margin"
            android:layout_marginEnd="@dimen/full_width_text_field_horizontal_margin"
            android:background="@null"
            android:gravity="start|top"
            android:hint="@string/activity_entry_body_hint" />

    </LinearLayout>

    <include
        android:id="@+id/activity_entry_fab_menu"
        layout="@layout/activity_entry_fab_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end" />

</FrameLayout>
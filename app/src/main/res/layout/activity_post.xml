<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/activity_post_root"
        android:orientation="vertical"
        android:minWidth="@dimen/dialog_min_width"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <miles.forum.ui.widget.TypefaceTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/activity_post_title"
            android:textSize="@dimen/large_text_size"
            style="@style/Forum.Dialog.Title" />

        <android.support.design.widget.TextInputLayout
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <miles.forum.ui.widget.TypefaceEditText
                android:id="@+id/activity_post_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:lines="3"
                android:hint="@string/activity_post_hint"
                tools:hint="Share your thoughts." />

        </android.support.design.widget.TextInputLayout>

        <miles.forum.ui.widget.TypefaceButton
            android:id="@+id/activity_post_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            style="@style/Forum.Dialog.Button" />

    </LinearLayout>

</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_entry_root"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Toolbar
        android:id="@+id/activity_entry_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        style="@style/AppTheme.Widget.HomeToolbar" />

    <miles.diary.ui.widget.NotebookEditText
        android:id="@+id/activity_entry_body"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="@dimen/large_text_size"
        android:layout_marginTop="@dimen/action_bar_margin"
        android:layout_marginStart="@dimen/full_width_text_field_horizontal_margin"
        android:layout_marginEnd="@dimen/full_width_text_field_horizontal_margin"
        android:layout_marginBottom="@dimen/action_bar_margin"
        android:background="@null"
        android:gravity="start|top"
        android:hint="@string/activity_entry_body_hint" />

    <LinearLayout
        android:id="@+id/activity_entry_fab_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_anchor="@id/activity_entry_root"
        app:layout_anchorGravity="bottom|end"
        app:layout_behavior="miles.diary.ui.SnackbarBehavior" >

        <ImageButton
            android:id="@+id/activity_entry_photo"
            android:src="@drawable/ic_photo_24dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/accent" />

        <ImageButton
            android:id="@+id/activity_entry_hashtag"
            android:src="@drawable/ic_mood_24dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/accent" />

        <ImageButton
            android:id="@+id/activity_entry_location"
            android:src="@drawable/ic_place_24dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/accent" />

        <ImageButton
            android:id="@+id/activity_entry_weather"
            android:src="@drawable/ic_local_florist_24dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/accent" />

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_gravity="bottom"
    android:padding="@dimen/activity_horizontal_margin"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <miles.diary.ui.widget.TypefaceTextView
        android:id="@+id/adapter_entry_text_time"
        android:drawableStart="@drawable/ic_access_time_24dp"
        android:includeFontPadding="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/adapter_time_text_size"
        android:textColor="@color/time"
        android:maxLines="1"
        tools:text="MOUNTAIN BIKING" />

    <miles.diary.ui.widget.TypefaceTextView
        android:id="@+id/adapter_entry_text_temperature"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/adapter_time_text_size"
        android:textColor="@color/time"
        android:maxLines="1"
        app:textViewAutoFit="true"
        tools:text="MOUNTAIN BIKING" />

    <miles.diary.ui.widget.TypefaceTextView
        android:layout_below="@id/adapter_entry_text_temperature"
        android:id="@+id/adapter_entry_text_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:textSize="@dimen/adapter_title_text_size"
        android:textColor="@android:color/black"
        tools:text="MOUNTAIN BIKING" />

    <miles.diary.ui.widget.TypefaceTextView
        android:layout_below="@id/adapter_entry_text_body"
        android:includeFontPadding="false"
        android:id="@+id/adapter_entry_text_location"
        android:drawableStart="@drawable/ic_place_24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/adapter_entry_margin"
        android:layout_marginBottom="@dimen/adapter_entry_margin"
        android:textSize="@dimen/adapter_time_text_size"
        android:textColor="@color/muted_gray"
        android:maxLines="1"
        tools:text="MOUNTAIN BIKING" />

</RelativeLayout>
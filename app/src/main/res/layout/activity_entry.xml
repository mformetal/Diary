<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_entry_root"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@android:color/white" >

    <android.support.design.widget.AppBarLayout
        android:id="@+id/activity_entry_appbar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin" >

        <android.support.design.widget.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:layout_scrollFlags="scroll|exitUntilCollapsed" >

            <miles.diary.ui.widget.SquareCornerImageView
                android:id="@+id/activity_entry_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="center"
                android:layout_gravity="center"
                android:transitionName="@string/transition_location_image"
                app:layout_scrollFlags="scroll|enterAlways|enterAlwaysCollapsed"
                app:layout_collapseMode="parallax" />

            <ImageButton
                android:id="@+id/activity_entry_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_back_24dp"
                android:layout_margin="@dimen/fab_margin"
                android:background="@null" />

        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_behavior="miles.diary.ui.ParallaxScroller"
        app:layout_anchor="@id/activity_entry_image"
        app:layout_anchorGravity="bottom|center_horizontal" >

        <android.support.design.widget.FloatingActionButton
            android:layout_alignParentStart="true"
            android:layout_margin="@dimen/fab_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/activity_entry_fab_edit_entry"
            android:src="@drawable/ic_mode_edit_24dp"
            android:tint="@android:color/white"
            app:fabSize="mini" />

        <android.support.design.widget.FloatingActionButton
            android:layout_centerInParent="true"
            android:layout_margin="@dimen/fab_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/activity_entry_fab_favorite_entry"
            android:src="@drawable/ic_star_outline_24dp"
            android:tint="@android:color/white"
            app:fabSize="mini" />

        <android.support.design.widget.FloatingActionButton
            android:layout_alignParentEnd="true"
            android:layout_margin="@dimen/fab_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/activity_entry_fab_delete_entry"
            android:src="@drawable/ic_delete_24dp"
            android:tint="@android:color/white"
            app:fabSize="mini" />

    </RelativeLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/adapter_entry_margin"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:orientation="horizontal" >

                <miles.diary.ui.widget.TypefaceTextView
                    android:id="@+id/activity_entry_date"
                    android:drawableTop="@drawable/ic_access_time_24dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="@dimen/medium_text_size"
                    android:textColor="@color/secondary_text"
                    tools:text="10:59AM" />

                <miles.diary.ui.widget.TypefaceIconTextView
                    android:id="@+id/activity_entry_weather"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="@color/secondary_text"
                    android:textSize="@dimen/medium_text_size"
                    android:maxLines="2"
                    tools:text="Icon \n Next" />

                <miles.diary.ui.widget.TypefaceTextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/activity_entry_place"
                    android:drawableTop="@drawable/ic_place_24dp"
                    android:textSize="@dimen/medium_text_size"
                    android:gravity="center"
                    android:textColor="@color/secondary_text"
                    tools:text="Swem Library" />

            </LinearLayout>

            <miles.diary.ui.widget.NotebookTextView
                android:id="@+id/activity_entry_body"
                android:textSize="@dimen/large_text_size"
                android:layout_margin="@dimen/adapter_entry_margin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@android:color/black"
                android:gravity="center"
                tools:text="BODY" />

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>
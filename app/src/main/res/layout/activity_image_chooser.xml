<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/activity_image_chooser_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <miles.diary.ui.widget.TypefaceButton
            android:id="@+id/activity_image_chooser_photo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/activity_entry_image_chooser_gallery"
            android:drawableStart="@drawable/ic_photo_24dp"
            android:lines="1"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/accent"
            app:buttonAutofit="true" />

        <miles.diary.ui.widget.TypefaceButton
            android:id="@+id/activity_image_chooser_camera"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/activity_entry_image_chooser_camera"
            android:drawableStart="@drawable/ic_camera_alt_24dp"
            android:lines="1"
            android:maxLines="1"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/accent"
            app:buttonAutofit="true" />

        <miles.diary.ui.widget.TypefaceButton
            android:id="@+id/activity_image_chooser_video"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/activity_entry_image_chooser_video"
            android:drawableStart="@drawable/ic_voice_chat_24dp"
            android:lines="1"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/accent"
            app:buttonAutofit="true" />

    </LinearLayout>

</LinearLayout>
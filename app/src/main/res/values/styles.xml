<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="android:textColorHint">@color/half_opacity_gray</item>
        <item name="icon">@color/icons</item>
    </style>

    <style name="AppTheme.Home" >
    </style>

    <style name="AppTheme.Widget" parent="android:Widget" />

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" >
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.Dialog" parent="@style/Theme.AppCompat.Light.Dialog" />

    <style name="AppTheme.Widget.HomeToolbar" >
        <item name="android:background">@color/primary</item>
        <item name="android:theme">@android:style/ThemeOverlay.Material.Dark</item>
        <item name="android:elevation">6dp</item>
    </style>

    <style name="AppTheme.DialogActivity" >
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

</resources>

<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="4dp"
    app:cardCornerRadius="3dp"
    app:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <miles.forum.ui.widget.TypefaceTextView
            android:id="@+id/adapter_post_layout_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|start"
            android:layout_marginStart="@dimen/adapter_post_horizontal_margin"
            android:layout_marginEnd="@dimen/adapter_post_horizontal_margin"
            android:textSize="@dimen/adapter_post_time_text_size"
            tools:text="12 Dec 2015, 04:34" />

        <miles.forum.ui.widget.TypefaceTextView
            android:id="@+id/adapter_post_layout_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/adapter_post_vertical_margin"
            android:layout_marginStart="@dimen/adapter_post_horizontal_margin"
            android:layout_marginEnd="@dimen/adapter_post_horizontal_margin"
            android:layout_marginBottom="@dimen/adapter_post_vertical_margin"
            android:gravity="start"
            android:layout_gravity="center_vertical"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/drawn_icon_text_size"
            tools:text="This is the post title" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <miles.forum.ui.widget.LikeButton
                android:id="@+id/adapter_post_layout_like"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:drawableStart="@drawable/ic_star_24dp_empty"
                android:textSize="@dimen/drawn_icon_text_size"
                style="@style/Forum.Widget.Button.Borderless" />

            <miles.forum.ui.widget.TypefaceButton
                android:id="@+id/adapter_post_layout_comment"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:drawableStart="@drawable/ic_comment_24dp"
                android:textSize="@dimen/drawn_icon_text_size"
                style="@style/Forum.Widget.Button.Borderless" />

            <miles.forum.ui.widget.TypefaceButton
                android:id="@+id/adapter_post_layout_share"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:drawableStart="@drawable/ic_share_24dp"
                android:textSize="@dimen/drawn_icon_text_size"
                style="@style/Forum.Widget.Button.Borderless" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
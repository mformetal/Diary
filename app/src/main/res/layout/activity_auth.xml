<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <miles.diary.ui.auth.AuthSurface
        android:id="@+id/activity_auth_surface"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <miles.diary.ui.widget.TypefaceTextView
        android:id="@+id/activity_auth_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:textSize="@dimen/large_text_size"
        android:text="@string/activity_auth_name" />

    <ImageButton
        android:id="@+id/activity_auth_recognize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:src="@drawable/ic_arrow_forward_24dp"
        android:layout_gravity="end"
        android:background="@null" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/activity_auth_undo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_undo_24dp"
        android:layout_margin="@dimen/fab_margin"
        android:layout_gravity="bottom|start"
        app:backgroundTint="@android:color/white"
        app:fabSize="normal" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/activity_auth_redo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_redo_24dp"
        android:layout_margin="@dimen/fab_margin"
        android:layout_gravity="bottom|end"
        app:backgroundTint="@android:color/white"
        app:fabSize="normal" />

</FrameLayout>
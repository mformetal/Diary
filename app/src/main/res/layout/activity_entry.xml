<?xml version="1.0" encoding="utf-8"?>
<miles.diary.ui.widget.CircledCoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_post_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <android.support.design.widget.AppBarLayout
        android:id="@+id/activity_post_appbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_bar_height"
        android:fitsSystemWindows="true"
        android:clipChildren="false"
        android:theme="@style/AppTheme.AppBarOverlay" >

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/activity_post_collapsing"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            android:clipChildren="false"
            app:contentScrim="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|exitUntilCollapsed" >

            <ImageView
                android:id="@+id/activity_entry_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:fitsSystemWindows="true"
                app:layout_collapseMode="parallax" />

            <android.support.v7.widget.Toolbar
                android:id="@+id/activity_post_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:popupTheme="@style/AppTheme.PopupOverlay"
                android:clipChildren="false"
                app:layout_collapseMode="pin" >

            </android.support.v7.widget.Toolbar>

        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/activity_post_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_camera_alt_24dp"
        android:layout_marginEnd="@dimen/fab_margin"
        app:layout_anchor="@id/activity_post_appbar"
        app:layout_anchorGravity="bottom|end" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <miles.diary.ui.widget.TypefaceEditText
                android:id="@+id/activity_post_input_title"
                android:layout_width="wrap_content"
                android:layout_height="?attr/actionBarSize"
                android:inputType="textCapSentences"
                android:hint="@string/activity_post_input_title_hint"
                android:gravity="start"
                android:layout_margin="@dimen/full_width_text_field_horizontal_margin"
                android:textSize="@dimen/large_text_size"
                app:editTextFont="@string/title_font" />

            <miles.diary.ui.widget.TypefaceEditText
                android:id="@+id/activity_post_input_body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine|textCapSentences"
                android:gravity="start"
                android:lines="4"
                android:layout_margin="@dimen/full_width_text_field_horizontal_margin"
                android:hint="@string/activity_post_input_body_hint"
                tools:hint="Share your thoughts." />

            <miles.diary.ui.widget.TypefaceButton
                android:id="@+id/activity_post_confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                style="@style/Forum.Dialog.Button" />

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</miles.diary.ui.widget.CircledCoordinatorLayout>
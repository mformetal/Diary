<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:navigationBarColor">@color/super_dark</item>
        <item name="android:statusBarColor">?android:colorPrimaryDark</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="android:textColorHint">@color/half_opacity_gray</item>
        <item name="android:windowBackground">@color/window_background</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="icon">@color/icons</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <style name="AppTheme.DialogActivity" parent="AppTheme">
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowBackground">@color/window_background</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="AppTheme.EntryActivity" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
    </style>

    <style name="AppTheme.UriActivity" parent="AppTheme">
        <item name="android:windowBackground">@color/super_dark</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="AppTheme.Widget" parent="android:Widget" />

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" >
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.Dialog" parent="@style/Theme.AppCompat.Light.Dialog" />

    <style name="AppTheme.Widget.Toolbar" >
        <item name="android:background">@color/toolbar</item>
        <item name="android:theme">@android:style/ThemeOverlay.Material.Dark</item>
        <item name="android:elevation">6dp</item>
    </style>

    <style name="AppTheme.EntryActivity.Toolbar" parent="AppTheme.Widget.Toolbar">
        <item name="android:background">@color/scrim_with_alpha</item>
    </style>

    <style name="AppTheme.ColoredButton" parent="AppTheme.Widget">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:backgroundTint">@color/accent</item>
    </style>

</resources>
